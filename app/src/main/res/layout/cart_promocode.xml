<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingVertical="12dp"
    android:background="@drawable/card_background_full">

    <TextView
        android:id="@+id/promocode"
        style="@style/regular_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/promocode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/promocode_input"
        style="@style/regular_14"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/toolbar_search_background"
        android:hint="@string/promocode_input_hint"
        android:inputType="text"
        android:lines="1"
        android:paddingHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/promocode" />

</androidx.constraintlayout.widget.ConstraintLayout>