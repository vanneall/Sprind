<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.result.ResultFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/search_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="20dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:spanCount="2"
        tools:listitem="@layout/vertical_card_item" />

    <View
        android:id="@+id/not_found_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <View
        android:id="@+id/not_found_illustration"
        android:layout_width="215dp"
        android:layout_height="215dp"
        android:background="@drawable/not_found_illustration"
        app:layout_constraintBottom_toBottomOf="@id/not_found_background"
        app:layout_constraintEnd_toEndOf="@id/not_found_background"
        app:layout_constraintStart_toStartOf="@id/not_found_background"
        app:layout_constraintTop_toTopOf="@id/not_found_background"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/no_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_condensed_bold"
        android:text="@string/there_is_no_such_products"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/not_found_background"
        app:layout_constraintStart_toStartOf="@id/not_found_background"
        app:layout_constraintTop_toBottomOf="@id/not_found_illustration" />

    <TextView
        android:id="@+id/no_product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_condensed_regular"
        android:paddingHorizontal="20dp"
        android:text="@string/there_is_no_such_products_description"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/not_found_background"
        app:layout_constraintStart_toStartOf="@id/not_found_background"
        app:layout_constraintTop_toBottomOf="@id/no_product" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/not_found_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="not_found_background, not_found_illustration, no_product, no_product_description" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/bad_connection_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="not_found_background2, bad_connection_illustration, bad_connection, bad_connection_desc" />

    <View
        android:id="@+id/not_found_background2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <View
        android:id="@+id/bad_connection_illustration"
        android:layout_width="215dp"
        android:layout_height="215dp"
        android:background="@drawable/bad_connection_illustration"
        app:layout_constraintBottom_toBottomOf="@id/not_found_background2"
        app:layout_constraintEnd_toEndOf="@id/not_found_background2"
        app:layout_constraintStart_toStartOf="@id/not_found_background2"
        app:layout_constraintTop_toTopOf="@id/not_found_background2"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/bad_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_condensed_bold"
        android:text="@string/bad_connection"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/not_found_background2"
        app:layout_constraintStart_toStartOf="@id/not_found_background2"
        app:layout_constraintTop_toBottomOf="@id/bad_connection_illustration" />

    <TextView
        android:id="@+id/bad_connection_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_condensed_regular"
        android:paddingHorizontal="20dp"
        android:text="@string/bad_connection_description"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/not_found_background2"
        app:layout_constraintStart_toStartOf="@id/not_found_background2"
        app:layout_constraintTop_toBottomOf="@id/bad_connection" />

</androidx.constraintlayout.widget.ConstraintLayout>