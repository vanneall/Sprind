<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_theme_surfaceVariant"
    android:paddingHorizontal="12dp"
    android:paddingVertical="12dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/delivery_title"
        style="@style/medium_22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delivery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/edit_address_icon"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/edit_address_icon"
        android:tint="@color/gray"
        app:layout_constraintBottom_toBottomOf="@id/address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/address" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/address"
        style="@style/regular_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="@string/select_address"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@id/edit_address_icon"
        app:layout_constraintTop_toBottomOf="@id/delivery_title" />

</androidx.constraintlayout.widget.ConstraintLayout>